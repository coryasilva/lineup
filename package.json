{
  "name": "lineup",
  "version": "1.0.0",
  "description": "Build winning floor hockey lineups for equal participation in Special Olympics.",
  "author": "Cory Silva",
  "license": "ISC",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:* --race",
    "dev:css": "npx @tailwindcss/cli -i input.css -o output.css --watch --minify",
    "dev:test": "ava --watch",
    "test": "ava",
    "build": "npm-run-all --sequential lint --parallel test build:*",
    "build:css": "npx @tailwindcss/cli -i input.css -o output.css --minify",
    "lint": "npx @biomejs/biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/cli": "^4.0.14",
    "ava": "^6.2.0",
    "jsdom": "^26.0.0",
    "jsdom-global": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.0.14"
  }
}
